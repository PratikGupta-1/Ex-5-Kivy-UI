<MainScreen>:
    name: 'main'
    on_enter:root.start_joy_thread()
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed()

    DPEAButton:
        id: logo_image_button
#        text: "here"
#        color: 1, 0, 0, 1
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.pressed()


    ImageButton:
        size: 100, 100
        id: mesButton
        source: "/home/pratikgupta/Desktop/kittenito.png"
        x: root.width * 0
        y: root.width * 0.37
        on_press: mesButtonLabel.text = root.changeButton(mesButtonLabel.text)


    Label:
        id: mesButtonLabel
        text: "On"
        x: root.width * -0.45
        y: root.width * -0.05
        color: 1, 0.5, 0, 1


    DPEAButton:
        id: countButton
        text: "0"
        size: 100, 100
        x: root.width * 0.6
        y: root.width * 0.2
        on_release: self.text = root.iterateButton(self.text)


    ImageButton:
        size: 100, 100
        id: mesMotor
        source: "/home/pratikgupta/Desktop/kittenito.png"
        x: root.width * 0.5
        y: root.width * 0.37
        on_press: mesMotorLabel.text = root.changeMotorLabel(mesMotorLabel.text)


    Label:
        id: mesMotorLabel
        text: "Motor On"
        x: root.width * 0.06
        y: root.width * -0.05
        color: 1, 0.5, 0, 1


    BoxLayout:
        Slider:
            id: slider
            size: 400, 30
            size_hint: 0.4, .2
            min: 0
            max: 100
            x: root.width * 0.4
            y: root.width * 0.3
            step: 1
            orientation: 'horizontal'

        Label:
            text: str(slider.value)
            x: root.width * 0.06
            y: root.width * -0.3
            color: 1, 0.5, 0, 1


    DPEAButton:
        id: newScreenButton
        text: "Go To New Screen"
        size: 100, 100
        x: root.width * 0.4
        y: root.width * 0.2

        on_press: root.goToNewScreen()


    Label:
        id: PositionJoystick
        text:
        font_size: 50
        x: (root.width / 3)
        y: (root.height / 3)
        color: 1, 0.5, 0, 1


