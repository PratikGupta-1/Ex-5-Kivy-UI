<NewScreen>
    name: 'NewScreen'
    FloatLayout:
        size_hint: None, None

    ImageButton:
        size: 100, 100
        id: GoBackButton
        source: "/home/pratikgupta/Desktop/kittenito.png"
        x: root.width * 0.1
        y: root.width * 0.37
        on_press: root.returnToMain()


    ImageButton:
        size: 100, 100
        id: animatedButton
        source: "/home/pratikgupta/Desktop/car.png"
        x: root.width * 0
        y: root.width * 0
        on_press: root.animateButton()

    Label:
        id: JoystickPosition

        x: root.width * -0.45
        y: root.width * -0.05
        color: 1, 0.5, 0, 1
        text: root.joystick.get_axis(0)

